@model List<VisitorViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-2">

        </div>
        <div class="col-md-8">
            <table class="table table-bordered table-striped">
                <tr> 
                    <th>#</th>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Şehir</th>
                    <th>E-Mail</th>
                    <th>Sil</th>
                    <th>Güncelle</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.VisitorId</td>
                        <td>@item.Name</td>
                        <td>@item.Surname</td>
                        <td>@item.City</td>
                        <td>@item.Mail</td>
                        <td><a href="/Admin/VisitorApi/DeleteVisitor/@item.VisitorId/" class="btn btn-outline-danger">Sil</a></td>
                        <td><a href="/Admin/VisitorApi/UpdateVisitor/@item.VisitorId/" class="btn btn-outline-info">Güncelle</a></td>
                    </tr>
                }
           
            </table>
          </div>
        <div class="col-md-2">
        </div>
    </div>
</div>


