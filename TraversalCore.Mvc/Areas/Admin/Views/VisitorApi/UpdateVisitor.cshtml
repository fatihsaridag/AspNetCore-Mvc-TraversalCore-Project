@model VisitorViewModel


@{
    ViewData["Title"] = "UpdateVisitor";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Api ile ziyaretçi güncelleme</h1>

<form method="post">
    <input type="hidden" asp-for="VisitorId" />
    <div class="form-group">
        <label>Ziyaretçi Adı</label>
        <input type="text" class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label>Ziyaretçi Adı</label>
        <input type="text" class="form-control" asp-for="Surname" />
        <span asp-validation-for="Surname"></span>
    </div>
    <div class="form-group">
        <label>Ziyaretçi Email</label>
        <input type="text" class="form-control" asp-for="Mail" />
        <span asp-validation-for="Mail"></span>
    </div>
    <div class="form-group">
        <label>Ziyaretçi Şehri</label>
        <input type="text" class="form-control" asp-for="City" />
        <span asp-validation-for="City"></span>
    </div>
    <div class="form-group">
        <input  type="submit" class="btn btn-success" value="Güncelle"/>
    </div>
</form>
