@model List<GetAllDestinationQueryResult>



@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>CQRS Tur Rotası Verileri </h2>


</br>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Şehir Adı</th>
        <th>Gün-Gece</th>
        <th>Fiyat</th>
        <th>Kapasite</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.City</td>
            <td>@item.DayNight</td>
            <td>@item.Price</td>
            <td>@item.Capacity</td>
            <td><a href="/Admin/DestinationCQRS/DeleteDestination/@item.Id"  class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Admin/DestinationCQRS/GetDestination/@item.Id" class="btn btn-outline-info">Güncelle</a></td>
        </tr>
    }
</table>

<a href="/Admin/DestinationCQRS/AddDestination" class="btn btn-outline-success">Yeni Tur Rotası Girişi</a>