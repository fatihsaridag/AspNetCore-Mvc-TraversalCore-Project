@model GetDestinationByIdQueryResult


@{
    ViewData["Title"] = "GetDestination";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Lokasyon Düzenleme Sayfası</h1>


<form method="post">
    <div class="form-group">
        <label>Şehir</label>
        <input type="text" asp-for="City" class="form-control" />
        <br />
    </div>
    <div class="form-group">
        <input type="hidden" asp-for="DestinationId" />
        <label>Gün-Gece</label>
        <input type="text" asp-for="DayNight" class="form-control" />
        <br />
    </div>
        <div class="form-group">
        <label>Fiyat</label>
     <input type="text" asp-for="Price" class="form-control" />
        <br />
    </div>
    <button class="btn btn-outline" type="submit">Lokasyon Bilgilerini güncelle</button>
</form>

