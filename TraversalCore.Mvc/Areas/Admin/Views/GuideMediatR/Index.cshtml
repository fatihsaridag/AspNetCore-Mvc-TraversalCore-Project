@model List<GetAllGuideQueryResult>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<h2>MediatR Rehber Listesi </h2>
</br>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Adı</th>
        <th>Açıklaması</th>
        <th>Resmi</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
            <tr>
                <td>@item.GuideId</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Image</td>
            <td><a href="/Admin/GuideMediatR/DeleteGuides/@item.GuideId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Admin/GuideMediatR/GetGuides/@item.GuideId" class="btn btn-outline-info">Güncelle</a></td>
            </tr>
    }
</table>

<a href="/Admin/GuideMediatR/AddGuides" class="btn btn-outline-success">Yeni Rehber Girişi</a>