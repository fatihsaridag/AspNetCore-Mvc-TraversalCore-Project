@model UserEditViewModel



@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Member/Views/Shared/_UserLayout.cshtml";
}

<h2 class="text-center text-primary">Profil Düzenleme Sayfası</h2>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        @Html.Label("Adınız")
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Soyadınız")
        <input type="text" asp-for="Surname" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Email")
        <input type="email" asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Telefon Numaranız")
        <input type="email" asp-for="PhoneNumber" class="form-control" />
    </div>
   
    <div class="form-group">
        @Html.Label("Şifreniz")
        <input type="password" asp-for="Password" class="form-control" />
    </div>
  
    <div class="form-group">
        @Html.Label("Şifre Tekrarı")
        <input type="password" asp-for="ConfirmPassword" class="form-control" />
    </div>
    <div class="form-group">
        <label>Resim Seçiniz</label>
        <input type="file" asp-for="Image" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary"> Güncelle </button>
    </div>
</form>

