@model IEnumerable<BookingHotelSearchViewModel.Result>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 0;
}

<h1>Booking Otel Rezervasyon Sayfası</h1>


<h3>Arama Yapılan Şehir : Paris/Fransa </h3>


<table class="table table-bordered table-striped">
    <tr>
        <th>#</th>
        <th>Otel Resmi</th>
        <th>Otel Adı</th>
        <th>Kaçtan Sonra Giriş</th>
        <th>Kaçtan Sonra Çıkış</th>
        <th>Otel Puanı</th>
        <th>Görüntülenme Sayısı</th>
        <th>Otel Değerlendirilmesi</th>
        <th>Para Birimi</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td><img style="width:100px; height:100px;" src="@item.photoMainUrl"></td>
            <td>@item.name</td>
            <td>@item.checkin.fromTime</td>
            <td>@item.checkout.fromTime</td>
            <td>@item.reviewScore</td>
            <td>@item.reviewCount</td>
            @if (item.reviewScoreWord == "Very good")
            {
                <td>Çok İyi</td>
            }
            @if (item.reviewScoreWord == "Good")
            {
                <td>İyi</td>
            }
              @if (item.reviewScoreWord == "Fabulous")
            {
                <td>Harika</td>
            }
            <td>@item.currency</td>
            <td><a href="#" class="btn btn-outline-info">Detay</a></td>
        </tr>
    }

</table>
